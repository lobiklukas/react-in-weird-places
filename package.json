{
  "name": "react-weird-places-monorepo",
  "version": "1.0.0",
  "private": true,
  "packageManager": "pnpm@10.19.0",
  "description": "Monorepo for React in Weird Places presentation and demos",
  "scripts": {
    "dev": "turbo run dev --filter='!demo-ink'",
    "dev:presentation": "turbo run dev --filter=presentation",
    "dev:pdf": "turbo run dev --filter=demo-react-pdf",
    "dev:email": "turbo run dev --filter=demo-react-email",
    "dev:three": "turbo run dev --filter=demo-react-three-fiber",
    "dev:car": "turbo run dev --filter=demo-react-three-fiber-car",
    "dev:ink": "turbo run dev --filter=demo-ink",
    "build": "turbo run build",
    "build:presentation": "turbo run build --filter=presentation",
    "preview:presentation": "turbo run preview --filter=presentation",
    "install:all": "pnpm install",
    "cleanup": "./kill-demos.sh"
  },
  "keywords": [
    "react",
    "presentation",
    "reconciler",
    "custom-renderer"
  ],
  "author": "",
  "license": "MIT",
  "devDependencies": {
    "turbo": "^2.6.3",
    "typescript": "^5.6.3"
  }
}
